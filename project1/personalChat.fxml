<AnchorPane prefHeight="740.0" prefWidth="593.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project1.PersonalChat">
   <children>
      <Label fx:id="title" alignment="CENTER" prefHeight="53.0" prefWidth="460.0">
         <font>
            <Font size="33.0" />
         </font>
      </Label>
      <TextField fx:id="tfMessage" layoutY="709.0" prefHeight="30.0" prefWidth="540.0" promptText="enter your message here" />
      <Button fx:id="sentMessage" layoutX="548.0" layoutY="709.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="52.0" text="sent" />
      <ScrollPane fx:id="spMain" layoutY="55.0" prefHeight="653.0" prefWidth="600.0">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <VBox fx:id="vBoxMessage" prefHeight="653.0" prefWidth="600.0" />
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
      <Button fx:id="back" layoutY="2.0" mnemonicParsing="false" onAction="#back" text="back" />
      <ImageView fx:id="imageView" fitHeight="56.0" fitWidth="97.0" layoutX="518.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="sentFile" layoutX="482.0" layoutY="712.0" mnemonicParsing="false" text="sent file" />
   </children>
</AnchorPane>
